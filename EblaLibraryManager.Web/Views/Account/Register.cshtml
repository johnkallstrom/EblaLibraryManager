@{ 
    ViewBag.Title = "Register";
}

@model RegisterViewModel

<div id="register">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4>Register</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly"></div>
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="form-group">
                            <label asp-for="@Model.Username" class="text-muted">Username</label>
                            <input asp-for="@Model.Username" type="text" class="form-control">
                            <span asp-validation-for="@Model.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Password" class="text-muted">Password</label>
                            <input asp-for="@Model.Password" type="password" class="form-control">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.ConfirmPassword" class="text-muted">Confirm Password</label>
                            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control">
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>