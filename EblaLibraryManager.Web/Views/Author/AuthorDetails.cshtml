@{ 
    ViewBag.Title = "Author Details";
}

@model AuthorViewModel

<div id="author-details">
    <div class="row gutters-sm">
        <div class="col-md-4 column">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <i class="fas fa-book-reader fa-6x"></i>
                        <div class="mt-3">
                            <h4>@Model.Name</h4>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="text-muted font-size-sm mb-0">@Model.Description</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 column">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h4 class="mb-3">Author Details</h4>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Name</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.Name</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Born</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.Born.ToShortDateString()</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Death</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@(Model.Death.HasValue ? Model.Death.Value.ToShortDateString() : "Active")</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Country</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.Country</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>