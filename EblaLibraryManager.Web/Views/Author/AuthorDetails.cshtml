@{ 
    ViewBag.Title = "Author Details";
}

@model AuthorViewModel

<div id="author-details">
    <div class="row gutters-sm">
        <div class="col-md-4 column">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <i class="fas fa-book-reader fa-6x"></i>
                        <div class="mt-3">
                            <h4>@Model.Name</h4>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="text-muted font-size-sm mb-0">@Model.Description</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 column">
            <div class="card shadow-sm mb-3 h-100">
                <div class="card-body">
                    <h4 class="mb-3">Author Details</h4>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Name</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.Name</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Born</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.Born.ToShortDateString()</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Death</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@(Model.Death.HasValue ? Model.Death.Value.ToShortDateString() : "Active")</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Country</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.Country</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row gutters-sm">
        <div class="col-md-8 column column-author-books">
            <div class="list-group">
                @foreach (var book in Model.Books)
                {
                    <a asp-controller="Book"
                       asp-action="BookDetails"
                       asp-route-bookId="@book.Id"
                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center shadow-sm">
                        <span>@book.Title</span>
                        <span>@book.Genre</span>
                        <span class="badge badge-success">@book.AvailabilityStatus.Name</span>
                    </a>
                }
            </div>
        </div>
    </div>
</div>