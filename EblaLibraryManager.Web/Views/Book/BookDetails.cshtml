@{ 
    ViewBag.Title = "Book Details";
}

@model BookViewModel

<div id="book-details">
    <div class="row gutters-sm">
        <div class="col-md-4 column">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <i class="fas fa-book fa-6x"></i>
                        <div class="mt-3">
                            <h4>@Model.Title</h4>
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <p class="text-muted font-size-sm mb-0">@Model.Description</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row gutters-sm">
        <div class="col-md-6 column column-book-details">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h4 class="mb-3">Book Details</h4>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Title</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.Title</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Author</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.Author.Name</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Genre</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.Genre.Name</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Language</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.Language</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Publisher</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.Publisher</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-4">
                            <h6 class="mb-0">Pages</h6>
                        </div>
                        <div class="col-sm-8 text-secondary">@Model.TotalPages</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 