@model PasswordSettingsViewModel

<div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-12" style="padding-top: 30px">
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="mb-2">Password</h4>
            <form asp-controller="Manage" asp-action="Settings" method="post">
                <div class="row gutters">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                        <div class="form-group">
                            <label asp-for="@Model.CurrentPassword" class="text-muted">Current Password</label>
                            <input asp-for="@Model.CurrentPassword" type="password" class="form-control">
                            <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.NewPassword" class="text-muted">New Password</label>
                            <input asp-for="@Model.NewPassword" type="password" class="form-control">
                            <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.ConfirmPassword" class="text-muted">Confirm Password</label>
                            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control">
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <button type="submit" class="btn btn-primary">Change Password</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>